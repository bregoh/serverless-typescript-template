{
  "name": "template-serverless",
  "version": "1.0.0",
  "description": "Template for TypeScript serverless app",
  "main": "index.js",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "deploy": "sls deploy --stage",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "start": "serverless offline",
    "test": "jest --coverage",
    "test:watch": "NODE_ENV=development LOG_LEVEL=error jest --watch",
    "migration:create": "typeorm-ts-node-esm migration:create src/migrations/app",
    "migration:generate": "typeorm-ts-node-esm migration:generate src/migrations/app -d src/data-source.ts",
    "migration:run": "typeorm-ts-node-esm migration:run -d src/data-source.ts",
    "migration:revert": "typeorm-ts-node-esm migration:revert -d src/data-source.ts"
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.95",
    "dotenv": "^16.0.1",
    "joi": "^17.6.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "serverless": "^3.17.0",
    "serverless-plugin-typescript": "^2.1.2",
    "ts-node": "^10.7.0",
    "typeorm": "^0.3.6",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "prettier": "^2.6.2",
    "serverless-offline": "^8.7.0",
    "ts-jest": "^28.0.2"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "testMatch": [
      "**/**/*.spec.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  }
}
